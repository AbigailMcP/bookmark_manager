<h1> Please sign in to your Bookmark account </h1>

<% if flash[:signed_out] %>
    <%= flash[:signed_out] %>
<% end %>

<form action="/sign_in" method="post">
  Email: <input type="email" name="email" placeholder="me@example.com" required>
  Password: <input type="password" name="password" placeholder="abc123" required>
  <input type="submit" value="Sign In">
</form>


<% if flash[:login_failed] %>
    <%= flash[:login_failed] %>
<% end %>
